.SideBar
  .LeftHeader
    .HeaderItems
      .HeaderItems__userName
        = current_user.name
      .HeaderItems__iconList
        = link_to new_group_path, class: "HeaderItems__iconList--icon" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user), class: "HeaderItems__iconList--icon" do
          = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class: "Group" do
        .Group__name
          = group.name
        .Group__message
          = group.show_last_message


   
